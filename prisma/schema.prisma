generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id           String        @id @default(cuid()) @map("_id")
  title        String
  description  String
  imageIds     String[]      // Array of image URLs from DigitalOcean Spaces

  // Clothing specific fields
  type         String        // "T-Shirt", "Hoodie", "Shirt", "Blouse", "Dashiki", "Jacket", etc.
  gender       String        // "Men", "Women", "Unisex"
  colors       String[]      // Multiple color variants available
  material     String        @default("Cotton") // "Cotton", "Cotton Blend", "Linen", etc.

  // Pricing
  price        Float         // Regular price
  salePrice    Float?        // Sale price (if on sale)
  discount     Float?        // Discount percentage

  // Inventory & Features
  featured     Boolean       @default(false)
  inStock      Boolean       @default(true)
  sku          String?       // Stock Keeping Unit (optional)

  // Relations
  productSizes ProductSize[]
  orderItems   OrderItem[]

  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime    @default(now()) @updatedAt @map("updated_at")
}

model Size {
  id            String         @id @default(cuid()) @map("_id")
  name          String         @unique
  productSizes  ProductSize[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
}

model ProductSize {
  id        String   @id @default(cuid()) @map("_id")
  productId String
  sizeId    String
  product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
  size      Size     @relation(fields: [sizeId], references: [id], onDelete: Cascade)
  name      String?  @map("name")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@index([productId])
  @@index([sizeId])
}

model OrderItem {
  id          String  @id @default(cuid()) @map("_id")
  orderId     String
  order       Order   @relation(fields: [orderId], references: [id])
  productId   String
  product     Product @relation(fields: [productId], references: [id])
  productName String
  quantity    Int     @default(1)
  size        String? // Size selected for this item
  price       Float   // Price at time of purchase

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderId])
  @@index([productId])
}

model Order {
  id              String      @id @default(cuid()) @map("_id")
  orderItems      OrderItem[]

  // Payment Information
  isPaid          Boolean     @default(false)
  paymentMethod   String      @default("cod") // "cod", "cashfree", "stripe"
  paymentId       String?     // Payment gateway transaction ID
  paymentStatus   String      @default("pending") // "pending", "success", "failed", "cancelled"

  // Customer Information
  userId          String?     // Clerk user ID (optional for guest checkout)
  customerName    String      @default("")
  customerEmail   String      @default("")
  phone           String      @default("")
  address         String      @default("")

  // Order totals
  totalAmount     Float       @default(0)

  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@index([userId])
}
